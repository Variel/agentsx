{
  "name": "agentsx",
  "version": "0.1.4",
  "description": "Cross-machine agent config sync CLI",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "REQUIREMENTS.md",
    "AGENTS.md",
    "AGENT_PATHS.md"
  ],
  "bin": {
    "agentsx": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "prepublishOnly": "pnpm check && pnpm build"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@inquirer/prompts": "^7.9.0",
    "@optique/core": "^0.9.2",
    "@optique/run": "^0.9.2",
    "jsonpath-plus": "^10.3.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.35.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  }
}
